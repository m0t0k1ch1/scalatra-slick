#import(com.github.m0t0k1ch1.slick.model._)
<%@ val trainer:         Trainer %>
<%@ val trainerPokemons: List[(Int, Pokemon)] %>
<%@ val pokemons:        List[Pokemon] %>

<div class="row basic-setup">
  <div class="col-6">
    <h1><%= trainer.name %></h1>
    <table class="table table-striped">
      <tr>
        <th>number</th>
        <th>name</th>
        <th>action</th>
      </tr>
      #for (trainerPokemon <- trainerPokemons)
        <tr>
          <td><%= trainerPokemon._2.number %></td>
          <td><%= trainerPokemon._2.name %></td>
          <td>
            <form action="/release" method="post" class="inline-form">
              <input type="hidden" name="trainer_id" value="<%= trainer.id %>" />
              <input type="hidden" name="trainer_pokemon_id" value="<%= trainerPokemon._1 %>" />
              <input type="submit" value="release" class="btn btn-small btn-warning" />
            </form>
          </td>
        </tr>
      #end
    </table>
  </div>
  <div class="col-6">
    <h1>wild</h1>
    <table class="table table-striped">
      <tr>
        <th>number</th>
        <th>name</th>
        <th>action</th>
      </tr>
      #for (pokemon <- pokemons)
        <tr>
          <td><%= pokemon.number %></td>
          <td><%= pokemon.name %></td>
          <td>
            <form action="/get" method="post" class="inline-form">
              <input type="hidden" name="trainer_id" value="<%= trainer.id %>" />
              <input type="hidden" name="pokemon_id" value="<%= pokemon.id %>" />
              <input type="submit" value="get" class="btn btn-small btn-success" />
            </form>
          </td>
        </tr>
      #end
    </table>
  </div>
</div>
